@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Cliquez ici pour confirmer du compte</a>
</p>
    }
    else
    {
<p>
    S'il vous plaît, verifiez votre e-mail pour confirmer votre inscription.
</p>
    }
}
