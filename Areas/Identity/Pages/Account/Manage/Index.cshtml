@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Nom d'utilisateur</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateBirth"></label>
                <input asp-for="Input.DateBirth" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.UniteAdmin"></label>
                <input asp-for="Input.UniteAdmin" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.Poste"></label>
                <input asp-for="Input.Poste" class="form-control" />
            </div>
            @*<div class="form-group">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" class="form-control" disabled  asp-items="Html.GetEnumSelectList<Role>()"></select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Enregistrer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}